{
  "version": 2,
  "buildCommand": "echo 'API only - no build needed'",
  "routes": [
    {
      "src": "/uploads/(.*)",
      "dest": "/api/uploads/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/scrape",
      "schedule": "0 2 * * *"
    }
  ]
}
